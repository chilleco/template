{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["DOM", "DOM.Iterable", "ES2022"],
      "allowJs": false,
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "noEmit": true,
      "types": ["node"],
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["next-env.d.ts", "src/**/*"],
    "exclude": ["node_modules"]
  }
  